<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- PDF Viewer as ImageView -->
    <ImageView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:contentDescription="PDF Page" />

    <!-- Video View for tutorial video (shown after last page) -->
    <VideoView
        android:id="@+id/videoView_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Control Panel - Landscape optimized -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#CC000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center">

        <!-- Back Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="← Back"
            android:textColor="@color/white"
            android:background="@drawable/btn_addition_tuts"
            android:textSize="14sp"
            android:fontFamily="@font/paytone_one" />

        <!-- Page Info -->
        <TextView
            android:id="@+id/pageInfo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Page 1 / 10"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/paytone_one"
            android:layout_marginHorizontal="8dp" />

        <!-- Next Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Next →"
            android:textColor="@color/white"
            android:background="@drawable/btn_addition_tuts"
            android:textSize="14sp"
            android:fontFamily="@font/paytone_one" />

    </LinearLayout>

    <!-- Full Screen Button - Landscape position -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFullScreen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:text="⛶"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_addition_tuts"
        android:gravity="center" />

    <!-- Close Button - Landscape position -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="✕"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_addition_tuts"
        android:gravity="center" />

</FrameLayout>

