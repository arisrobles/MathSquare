<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:id="@+id/main">

    <FrameLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:id="@+id/number_container">

    </FrameLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:gravity="center">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:textSize="33sp"
             android:textColor="#FFFFFF"
             android:textAlignment="center"
             app:layout_constraintTop_toTopOf="parent"
             android:shadowRadius="2"
             app:layout_constraintStart_toStartOf="parent"
             android:fontFamily="@font/paytone_one"
             android:shadowColor="#000000"
             app:layout_constraintEnd_toEndOf="parent"
             android:shadowDx="4"
             android:shadowDy="3"
             android:id="@+id/operationDisplay"
             android:text="Multiplication" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:id="@+id/gameView">

        <TextView
             android:layout_height="300dp"
             android:layout_width="300dp"
             android:background="@drawable/bg_blackboard"
             app:layout_constraintHorizontal_bias="0.496"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="40dp"
             app:layout_constraintTop_toBottomOf="@+id/heartWithTimer"
             android:id="@+id/Border" />

        <LinearLayout
             android:layout_height="100dp"
             android:layout_width="250dp"
             app:layout_constraintHorizontal_bias="0.496"
             android:orientation="horizontal"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="30dp"
             app:layout_constraintTop_toBottomOf="@+id/Border"
             android:id="@+id/linearLayout">

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="100dp"
                 android:layout_width="100dp"
                 android:textSize="40sp"
                 android:layout_marginLeft="20dp"
                 android:textColor="#FFFFFF"
                 android:background="@drawable/btn_short_condition"
                 android:shadowRadius="4"
                 android:layout_marginRight="10dp"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:id="@+id/btn_choice1"
                 android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="100dp"
                 android:layout_width="100dp"
                 android:background="@drawable/btn_short_condition"
                 android:shadowRadius="4"
                 android:textSize="40sp"
                 android:layout_marginRight="20dp"
                 android:shadowColor="#000000"
                 android:textColor="#FFFFFF"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:id="@+id/btn_choice2"
                 android:text="15" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="100dp"
             android:layout_width="250dp"
             app:layout_constraintHorizontal_bias="0.496"
             android:orientation="horizontal"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="15dp"
             app:layout_constraintTop_toBottomOf="@+id/linearLayout"
             android:id="@+id/linearLayout3">

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="100dp"
                 android:layout_width="100dp"
                 android:textSize="40sp"
                 android:layout_marginLeft="20dp"
                 android:textColor="#FFFFFF"
                 android:background="@drawable/btn_short_condition"
                 android:shadowRadius="4"
                 android:layout_marginRight="10dp"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:id="@+id/btn_choice3"
                 android:text="777" />

            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="100dp"
                 android:layout_width="100dp"
                 android:background="@drawable/btn_short_condition"
                 android:shadowRadius="4"
                 android:textSize="40sp"
                 android:layout_marginRight="20dp"
                 android:shadowColor="#000000"
                 android:textColor="#FFFFFF"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:id="@+id/btn_choice4"
                 android:text="50" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="55dp"
             android:layout_width="455dp"
             android:gravity="center_vertical"
             app:layout_constraintTop_toTopOf="parent"
             android:orientation="horizontal"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="20dp"
             android:id="@+id/linearLayout2">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginStart="30dp">

                <ImageButton
                     android:layout_height="55dp"
                     android:layout_width="55dp"
                     android:background="@drawable/circle_box"
                     android:layout_marginLeft="25dp"
                     app:srcCompat="@drawable/ic_home"
                     android:id="@+id/imgBtn_home" />

            </LinearLayout>

            <TextView
                 android:layout_height="55dp"
                 android:layout_width="wrap_content"
                 android:textSize="20sp"
                 android:textColor="#FFFFFF"
                 android:gravity="center"
                 android:shadowRadius="2"
                 android:fontFamily="@font/paytone_one"
                 android:shadowColor="#000000"
                 android:shadowDx="4"
                 android:shadowDy="3"
                 android:layout_weight="1"
                 android:id="@+id/text_operation"
                 android:text="Subtraction" />

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="30dp"
                 android:gravity="end"
                 android:orientation="horizontal">

                <ImageButton
                     android:layout_height="55dp"
                     android:layout_width="55dp"
                     android:background="@drawable/circle_box"
                     android:layout_marginRight="25dp"
                     app:srcCompat="@drawable/ic_pause"
                     android:id="@+id/imgBtn_pause" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="60dp"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             app:layout_constraintTop_toTopOf="parent"
             android:orientation="horizontal"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="75dp"
             android:id="@+id/heartWithTimer">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginStart="36dp"
                 android:layout_gravity="center_vertical">

                <!-- Lives Label -->
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Lives"
                     android:textSize="11sp"
                     android:textColor="@color/white"
                     android:fontFamily="@font/paytone_one"
                     android:shadowRadius="2"
                     android:shadowColor="#000000"
                     android:shadowDx="1"
                     android:shadowDy="1"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginBottom="3dp"
                     android:id="@+id/lives_label" />

                <FrameLayout
                     android:layout_height="40dp"
                     android:layout_width="96dp"
                     android:gravity="center"
                     android:id="@+id/heart_choice">

                    <LinearLayout
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:background="@drawable/btn_boxsmall"
                         android:gravity="center|start"
                         android:orientation="vertical">

                        <LinearLayout
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center|start"
                             android:orientation="horizontal"
                             android:layout_marginStart="12dp">

                            <ImageView
                                 android:layout_height="35dp"
                                 android:layout_width="35dp"
                                 android:scaleType="centerCrop"
                                 android:src="@drawable/ic_heart"
                                 android:padding="2dp"
                                 android:id="@+id/icon_heart"
                                 android:layout_gravity="center" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="23sp"
                                 android:textColor="@color/white"
                                 android:layout_marginStart="8dp"
                                 android:layout_marginBottom="4dp"
                                 android:gravity="center_horizontal"
                                 android:shadowRadius="4"
                                 android:fontFamily="@font/paytone_one"
                                 android:shadowColor="#000000"
                                 android:shadowDx="2"
                                 android:shadowDy="2"
                                 android:id="@+id/heart_txt"
                                 android:text="3"
                                 android:paddingTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <TextView
                 android:layout_height="55dp"
                 android:layout_width="wrap_content"
                 android:textSize="23sp"
                 android:textColor="#FFFFFF"
                 android:gravity="center"
                 android:shadowRadius="2"
                 android:fontFamily="@font/paytone_one"
                 android:paddingBottom="12dp"
                 android:shadowColor="#000000"
                 android:shadowDx="4"
                 android:shadowDy="3"
                 android:layout_weight="1"
                 android:id="@+id/text_question_progress"
                 android:text="4/10" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="36dp"
                 android:gravity="end"
                 android:orientation="vertical"
                 android:layout_gravity="center_vertical">

                <!-- Timer Label -->
                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Timer"
                     android:textSize="11sp"
                     android:textColor="@color/white"
                     android:fontFamily="@font/paytone_one"
                     android:shadowRadius="2"
                     android:shadowColor="#000000"
                     android:shadowDx="1"
                     android:shadowDy="1"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginBottom="3dp"
                     android:id="@+id/timer_label" />

                <FrameLayout
                     android:layout_height="40dp"
                     android:layout_width="96dp"
                     android:gravity="center"
                     android:id="@+id/timer_choice">

                    <LinearLayout
                         android:layout_height="match_parent"
                         android:layout_width="match_parent"
                         android:background="@drawable/btn_boxsmall"
                         android:gravity="center|start"
                         android:orientation="vertical">

                        <LinearLayout
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:gravity="center|start"
                             android:orientation="horizontal"
                             android:layout_marginStart="10dp">

                            <ImageView
                                 android:layout_height="35dp"
                                 android:layout_width="35dp"
                                 android:scaleType="centerCrop"
                                 android:src="@drawable/ic_clock"
                                 android:padding="2dp"
                                 android:id="@+id/icon_timer"
                                 android:layout_gravity="center" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="wrap_content"
                                 android:textSize="16sp"
                                 android:textColor="@color/white"
                                 android:layout_marginStart="2dp"
                                 android:layout_marginBottom="4dp"
                                 android:gravity="center_horizontal"
                                 android:shadowRadius="4"
                                 android:fontFamily="@font/paytone_one"
                                 android:shadowColor="#000000"
                                 android:shadowDx="2"
                                 android:shadowDy="2"
                                 android:id="@+id/timer_txt"
                                 android:text="10:00"
                                 android:paddingTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="220dp"
             android:layout_width="180dp"
             app:layout_constraintHorizontal_bias="0.50"
             app:layout_constraintTop_toTopOf="@+id/Border"
             android:orientation="vertical"
             app:layout_constraintStart_toStartOf="@+id/Border"
             app:layout_constraintEnd_toEndOf="@+id/Border"
             app:layout_constraintBottom_toBottomOf="@+id/Border"
             app:layout_constraintVertical_bias="0.660">

            <TextView
                 android:layout_height="50dp"
                 android:layout_width="match_parent"
                 android:gravity="right"
                 android:paddingRight="8dp"
                 android:fontFamily="@font/shantell_sans_bold"
                 android:textSize="38sp"
                 android:textColor="#FFFFFF"
                 android:id="@+id/text_givenone"
                 android:text="55" />

            <LinearLayout
                 android:layout_height="55dp"
                 android:layout_width="match_parent"
                 android:orientation="horizontal">

                <TextView
                     android:layout_height="45dp"
                     android:layout_width="10dp"
                     android:gravity="right"
                     android:fontFamily="@font/shantell_sans_bold"
                     android:textSize="38sp"
                     android:textColor="#FFFFFF"
                     android:layout_weight="1"
                     android:id="@+id/text_operator"
                     android:text="+" />

                <TextView
                     android:layout_height="45dp"
                     android:layout_width="60dp"
                     android:gravity="right"
                     android:paddingRight="8dp"
                     android:fontFamily="@font/shantell_sans_bold"
                     android:textSize="38sp"
                     android:textColor="#FFFFFF"
                     android:layout_weight="1"
                     android:id="@+id/text_giventwo"
                     android:text="999" />

            </LinearLayout>

            <View
                 android:layout_height="6dp"
                 android:layout_width="wrap_content"
                 android:background="#FFFFFF"
                 android:layout_marginLeft="30dp" />

            <TextView
                 android:layout_height="40dp"
                 android:layout_width="match_parent"
                 android:fontFamily="@font/shantell_sans_bold"
                 android:textSize="32sp"
                 android:textColor="#FFFFFF"
                 android:paddingLeft="12dp"
                 android:id="@+id/equal"
                 android:text="=" />

        </LinearLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:visibility="invisible"
             app:layout_constraintHorizontal_bias="0.498"
             android:textSize="17sp"
             android:textColor="@color/white"
             android:layout_marginTop="20dp"
             app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
             android:shadowRadius="2"
             app:layout_constraintStart_toStartOf="parent"
             android:fontFamily="@font/paytone_one"
             android:shadowColor="#000000"
             app:layout_constraintEnd_toEndOf="parent"
             android:shadowDx="4"
             android:shadowDy="3"
             android:id="@+id/text_feedback"
             android:text="" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>