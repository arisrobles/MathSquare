<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/yellowbg"
    android:fillViewport="true">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/yellowbg"
        android:id="@+id/main">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/number_container">
        </FrameLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:padding="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="28dp"
                android:shadowRadius="4"
                android:textSize="25sp"
                android:fontFamily="@font/paytone_one"
                android:textColor="@color/white"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="Create Quiz" />

            <!-- Quiz Info Section -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:fontFamily="@font/paytone_one"
                    android:textColor="#5DB575"
                    android:textStyle="bold"
                    android:text="Quiz Information"
                    android:layout_marginBottom="16dp" />

                <!-- Quiz Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quiz Title"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editQuizTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Quiz Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quiz Number"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editQuizNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Grade Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Grade Level"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <Spinner
                        android:id="@+id/spinnerGrade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/paytone_one" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Section (Optional)"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <Spinner
                        android:id="@+id/spinnerSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/paytone_one" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Schedule Section -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:fontFamily="@font/paytone_one"
                    android:textColor="#5DB575"
                    android:textStyle="bold"
                    android:text="Schedule"
                    android:layout_marginBottom="16dp" />

                <!-- Start Date/Time -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Date"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_save_rounded"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Time"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_save_rounded"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- End Date/Time -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Date"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_save_rounded"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Time"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_save_rounded"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Question Form Section -->
            <LinearLayout
                android:id="@+id/question_form_section"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:fontFamily="@font/paytone_one"
                    android:textColor="#5DB575"
                    android:textStyle="bold"
                    android:text="Add Questions"
                    android:layout_marginBottom="16dp" />

                <!-- Operation Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Operation"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <Spinner
                        android:id="@+id/spinnerOperation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/paytone_one" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Difficulty Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Difficulty"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <Spinner
                        android:id="@+id/spinnerDifficulty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/paytone_one" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Number 1 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Number"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNum1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Number 2 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Second Number"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNum2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Answer -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correct Answer"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Choice 1 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choice 1"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editChoice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Choice 2 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choice 2"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editChoice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Choice 3 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choice 3"
                    android:layout_marginBottom="8dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editChoice3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Choice 4 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choice 4"
                    android:layout_marginBottom="16dp"
                    style="@style/CustomTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editChoice4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Add Question Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_create"
                    android:elevation="8dp"
                    android:fontFamily="@font/paytone_one"
                    android:text="Add Question to List"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Questions List -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:fontFamily="@font/paytone_one"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Questions List"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <LinearLayout
                    android:id="@+id/questionsListLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Save Quiz Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/box_create"
                android:elevation="8dp"
                android:fontFamily="@font/paytone_one"
                android:text="Save Quiz"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>

