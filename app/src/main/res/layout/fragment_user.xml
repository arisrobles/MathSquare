<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/yellowbg"
    android:fillViewport="true"
    android:id="@+id/scroll">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:id="@+id/main">

        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/number_container">

        </FrameLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="start|center"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="28dp"
                android:shadowRadius="4"
                android:textSize="25sp"
                android:fontFamily="@font/paytone_one"
                android:textColor="@color/white"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:id="@+id/question_opening"
                android:text="User Management" />

        </LinearLayout>

        <!-- Add Account Buttons Section -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/btn_default"
                android:gravity="center"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:id="@+id/btn_playgame_as_student">

                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginEnd="6dp"
                    app:srcCompat="@drawable/ic_student" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Add Admin" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_default"
                android:gravity="center"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:id="@+id/btn_signinteacher">

                <ImageView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_teacher" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="Add Teacher" />

            </LinearLayout>

        </LinearLayout>

        <!-- Section Selector Buttons -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/btn_condition_create"
                android:gravity="center"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:id="@+id/btn_show_admins">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Admins" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/box_create"
                android:gravity="center"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:id="@+id/btn_show_teachers">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Teachers" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="45dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@drawable/box_create"
                android:gravity="center"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:id="@+id/btn_show_students">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Students" />

            </LinearLayout>

        </LinearLayout>

        <!-- User Count Display -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/paytone_one"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowRadius="2"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:id="@+id/user_count_text"
                android:text="Total Users: 0" />

        </LinearLayout>

        <!-- Users Table Section -->
        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginEnd="10dp"
             android:gravity="center"
             android:background="@drawable/bg_board_two"
             android:padding="8dp"
             android:orientation="horizontal"
             android:layout_marginTop="20dp"
             android:layout_marginStart="10dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center|top"
                 android:background="@drawable/bg_board_three"
                 android:padding="12dp"
                 android:orientation="vertical">

                <!-- Search Section for Table -->
                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center"
                     android:orientation="horizontal"
                     android:layout_marginBottom="16dp">

                    <LinearLayout
                         android:layout_height="45dp"
                         android:layout_width="match_parent"
                         android:gravity="center_vertical"
                         android:background="@drawable/box_create"
                         android:orientation="horizontal"
                         android:paddingHorizontal="16dp"
                         android:elevation="4dp">

                        <ImageView
                             android:layout_height="20dp"
                             android:layout_width="20dp"
                             android:src="@android:drawable/ic_menu_search"
                             android:layout_marginEnd="12dp"
                             android:tint="@color/white"
                             android:id="@+id/search_icon" />

                        <EditText
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:hint="Search users..."
                             android:textColorHint="@color/white"
                             android:textColor="@color/white"
                             android:fontFamily="@font/paytone_one"
                             android:textSize="14sp"
                             android:background="@android:color/transparent"
                             android:maxLines="1"
                             android:inputType="text"
                             android:imeOptions="actionSearch"
                             android:id="@+id/search_edittext" />

                        <ImageView
                             android:layout_height="20dp"
                             android:layout_width="20dp"
                             android:src="@android:drawable/ic_menu_close_clear_cancel"
                             android:layout_marginStart="8dp"
                             android:tint="@color/white"
                             android:visibility="gone"
                             android:id="@+id/clear_search_icon" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="top|center"
                     android:orientation="horizontal">

                    <TableLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/tableLayout"
                        android:stretchColumns="1,2,3,4,5">

                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                            <CheckBox
                                android:layout_height="wrap_content"
                                android:layout_width="20dp"
                                android:layout_gravity="start"
                                android:visibility="gone"
                                android:layout_marginEnd="8dp"
                                android:id="@+id/rowCheckboxSelectAll" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:fontFamily="@font/paytone_one"
                                android:textSize="13sp"
                                android:textColor="#204520"
                                android:layout_weight="1.5"
                                android:layout_gravity="start"
                                android:text="Name"
                                android:textStyle="bold"
                                android:id="@+id/headerName" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:fontFamily="@font/paytone_one"
                                android:textSize="13sp"
                                android:textColor="#204520"
                                android:layout_weight="1.5"
                                android:layout_gravity="center"
                                android:text="Email"
                                android:textStyle="bold"
                                android:id="@+id/headerEmail" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:fontFamily="@font/paytone_one"
                                android:textSize="13sp"
                                android:textColor="#204520"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="Type"
                                android:textStyle="bold"
                                android:id="@+id/headerType" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:fontFamily="@font/paytone_one"
                                android:textSize="13sp"
                                android:textColor="#204520"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="Section"
                                android:textStyle="bold"
                                android:id="@+id/headerSection" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:fontFamily="@font/paytone_one"
                                android:textSize="13sp"
                                android:textColor="#204520"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="Grade"
                                android:textStyle="bold"
                                android:id="@+id/headerGrade" />



                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Delete Button Section -->
        <LinearLayout
             android:layout_height="120dp"
             android:layout_width="match_parent"
             android:gravity="center"
             android:orientation="horizontal"
             android:layout_marginTop="20dp">

            <ImageView
                 android:layout_height="60dp"
                 android:layout_width="60dp"
                 android:src="@drawable/ic_delete"
                 android:background="@drawable/btn_condition_delete"
                 android:elevation="16dp"
                 android:padding="16dp"
                 android:id="@+id/deletesection" />

            <ImageView
                 android:layout_height="60dp"
                 android:layout_width="60dp"
                 android:src="@drawable/ic_delete"
                android:layout_marginLeft="18dp"
                 android:background="@drawable/btn_green_off"
                 android:elevation="16dp"
                 android:padding="16dp"
                android:visibility="gone"
                 android:id="@+id/checkdelete" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="start|center"
             android:orientation="vertical"
             android:layout_marginTop="60dp">

            <TextView
                 android:layout_height="0dp"
                 android:layout_width="match_parent"
                 android:gravity="center_horizontal"
                 android:layout_marginHorizontal="28dp"
                 android:shadowRadius="4"
                 android:textSize="25sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="#00000000"
                 android:shadowColor="#00000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Space is empty" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>