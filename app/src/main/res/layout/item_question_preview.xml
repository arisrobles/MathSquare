<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_card_background"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:fontFamily="@font/paytone_one"
                android:textColor="#5DB575"
                android:textStyle="bold"
                android:id="@+id/textQuestionPreview"
                android:text="Question Preview" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:fontFamily="@font/paytone_one"
                android:textColor="#888888"
                android:id="@+id/textOperationPreview"
                android:text="Operation: --" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_rounded"
            android:elevation="4dp"
            android:fontFamily="@font/paytone_one"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="8dp"
            android:minWidth="70dp"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRemoveQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_delete_rounded"
            android:elevation="4dp"
            android:fontFamily="@font/paytone_one"
            android:text="Remove"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="8dp"
            android:minWidth="70dp" />

    </LinearLayout>

</LinearLayout>

