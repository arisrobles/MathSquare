<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_card_background"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/textQuestion"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#5DB575"
            android:textStyle="bold"
            android:text="Question" />

        <TextView
            android:id="@+id/textDetails"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#888888"
            android:text="Details" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnViewQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:fontFamily="@font/paytone_one"
            android:textColor="@color/white"
            android:background="@drawable/btn_save_rounded"
            android:padding="12dp"
            android:minWidth="80dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEditQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:fontFamily="@font/paytone_one"
            android:textColor="@color/white"
            android:background="@drawable/btn_add_rounded"
            android:padding="12dp"
            android:minWidth="80dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDeleteQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:fontFamily="@font/paytone_one"
            android:textColor="@color/white"
            android:background="@drawable/btn_delete_rounded"
            android:padding="12dp"
            android:minWidth="80dp" />

    </LinearLayout>

</LinearLayout>

