<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_board_two"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bg_board_three"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Question Number -->
        <TextView
            android:id="@+id/questionNumberText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#204520"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="Question 1" />

        <!-- Question -->
        <TextView
            android:id="@+id/questionText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#5DB575"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:text="5 + 3 = ?" />

        <!-- Operation and Difficulty -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/operationText"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:fontFamily="@font/paytone_one"
                android:textColor="#888888"
                android:text="Operation: Addition" />

            <TextView
                android:id="@+id/difficultyText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/paytone_one"
                android:textColor="#888888"
                android:text="Difficulty: Easy" />

        </LinearLayout>

        <!-- Correct Answer -->
        <TextView
            android:id="@+id/correctAnswerText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#204520"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:text="Correct Answer: 8" />

        <!-- Choices -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#888888"
            android:text="Choices:"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:id="@+id/choicesLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="8dp" />

    </LinearLayout>

</LinearLayout>

