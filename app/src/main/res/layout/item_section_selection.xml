<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_board_two"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_board_three"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sectionNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#204520"
            android:textStyle="bold"
            android:text="Grade 1 - Section Name" />

        <TextView
            android:id="@+id/sectionDetailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/paytone_one"
            android:textColor="#5DB575"
            android:layout_marginTop="4dp"
            android:text="Tap to manage student numbers" />

    </LinearLayout>

</LinearLayout>

