<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_board_three"
    android:padding="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Checkbox (hidden by default) -->
        <CheckBox
            android:id="@+id/rowCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="12dp" />

        <!-- Student Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">

            <!-- Name and History Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="16sp"
                    android:textColor="#204520"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/btnHistory"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_history"
                    android:background="@drawable/btn_condition_create"
                    android:padding="6dp"
                    android:contentDescription="View History"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Details Row 1: Section and Grade -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="12sp"
                    android:textColor="#5DB575"
                    android:text="Section: " />

                <TextView
                    android:id="@+id/sectionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="12sp"
                    android:textColor="#5DB575"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="12sp"
                    android:textColor="#5DB575"
                    android:text="Grade: " />

                <TextView
                    android:id="@+id/gradeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="12sp"
                    android:textColor="#5DB575" />

            </LinearLayout>

            <!-- Details Row 2: Quiz No. and Score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="12sp"
                    android:textColor="#5DB575"
                    android:text="Quiz: " />

                <TextView
                    android:id="@+id/quizNoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="12sp"
                    android:textColor="#5DB575"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="12sp"
                    android:textColor="#5DB575"
                    android:text="Score: " />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/paytone_one"
                    android:textSize="14sp"
                    android:textColor="#204520"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

