<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:fillViewport="true"
     android:id="@+id/scroll">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="top"
         android:orientation="vertical"
         android:id="@+id/main">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="start|center"
             android:orientation="vertical"
             android:layout_marginTop="60dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_horizontal"
                 android:layout_marginHorizontal="28dp"
                 android:shadowRadius="4"
                 android:textSize="25sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Manage Your Sections" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center"
             android:orientation="horizontal"
             android:layout_marginTop="10dp">

            <!-- Add Section Button with Label -->
            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical">

                <ImageView
                     android:layout_height="60dp"
                     android:layout_width="60dp"
                     android:src="@drawable/ic_add"
                     android:background="@drawable/btn_condition_create"
                     android:elevation="16dp"
                     android:padding="4dp"
                     android:id="@+id/createsection" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Add Section"
                     android:textColor="@color/white"
                     android:textSize="12sp"
                     android:fontFamily="@font/paytone_one"
                     android:gravity="center"
                     android:layout_marginTop="4dp"
                     android:shadowRadius="2"
                     android:shadowColor="#000000"
                     android:shadowDx="1"
                     android:shadowDy="1" />

            </LinearLayout>

            <!-- Delete Section Button with Label -->
            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:layout_marginLeft="32dp"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:gravity="center"
                     android:orientation="horizontal">

                    <ImageView
                         android:layout_height="60dp"
                         android:layout_width="60dp"
                         android:src="@drawable/ic_delete"
                         android:background="@drawable/btn_condition_delete"
                         android:elevation="16dp"
                         android:padding="16dp"
                         android:id="@+id/deletesection" />

                    <ImageView
                         android:layout_height="60dp"
                         android:layout_width="60dp"
                         android:src="@drawable/ic_delete"
                        android:layout_marginLeft="18dp"
                         android:background="@drawable/btn_green_off"
                         android:elevation="16dp"
                         android:padding="16dp"
                        android:visibility="gone"
                         android:id="@+id/checkdelete" />

                </LinearLayout>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Delete Section"
                     android:textColor="@color/white"
                     android:textSize="12sp"
                     android:fontFamily="@font/paytone_one"
                     android:gravity="center"
                     android:layout_marginTop="4dp"
                     android:shadowRadius="2"
                     android:shadowColor="#000000"
                     android:shadowDx="1"
                     android:shadowDy="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="320dp"
             android:layout_width="match_parent"
             android:layout_marginEnd="10dp"
             android:gravity="center"
             android:background="@drawable/bg_board_two"
             android:padding="8dp"
             android:orientation="horizontal"
             android:layout_marginStart="10dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:gravity="center|top"
                 android:background="@drawable/bg_board_three"
                 android:padding="12dp"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="top|center"
                     android:orientation="horizontal">

                    <TableLayout
                         xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:id="@+id/tableLayout"
                         android:stretchColumns="1,2">

                         <TableRow
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="20dp"
        android:layout_gravity="start"
        android:visibility="gone"
                                android:layout_marginEnd="8dp"
        android:id="@+id/rowCheckboxSelectAll" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="23sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#204520"
                                 android:layout_weight="1"
                                 android:layout_gravity="start"
                                 android:text="Grade"
                                 android:textStyle="bold" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="23sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#204520"
                                 android:layout_weight="1"
                                 android:layout_gravity="end"
                                 android:text="Section"
                                 android:textStyle="bold" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>