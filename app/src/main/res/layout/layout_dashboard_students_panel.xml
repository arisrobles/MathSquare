<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:fillViewport="true"
     android:id="@+id/scroll">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="top"
         android:orientation="vertical"
         android:id="@+id/main">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="start|center"
             android:orientation="vertical"
             android:layout_marginTop="60dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_horizontal"
                 android:layout_marginHorizontal="28dp"
                 android:shadowRadius="4"
                 android:textSize="25sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Student Dashboard" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center"
             android:orientation="horizontal"
             android:layout_marginTop="10dp">

            <!-- Delete Button with Label -->
            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical">

                <ImageView
                     android:layout_height="60dp"
                     android:layout_width="60dp"
                     android:src="@drawable/ic_delete"
                     android:background="@drawable/btn_condition_delete"
                     android:elevation="16dp"
                     android:padding="16dp"
                     android:id="@+id/deletesection" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Delete"
                     android:textColor="@color/white"
                     android:textSize="14sp"
                     android:fontFamily="@font/paytone_one"
                     android:gravity="center"
                     android:layout_marginTop="4dp"
                     android:shadowRadius="2"
                     android:shadowColor="#000000"
                     android:shadowDx="1"
                     android:shadowDy="1" />

            </LinearLayout>

            <!-- Confirm Delete Button with Label -->
            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_marginStart="18dp"
                 android:visibility="gone"
                 android:id="@+id/confirm_delete_layout">

                <ImageView
                     android:layout_height="60dp"
                     android:layout_width="60dp"
                     android:src="@drawable/ic_delete"
                     android:background="@drawable/btn_green_off"
                     android:elevation="16dp"
                     android:padding="16dp"
                     android:id="@+id/checkdelete" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Confirm"
                     android:textColor="@color/white"
                     android:textSize="14sp"
                     android:fontFamily="@font/paytone_one"
                     android:gravity="center"
                     android:layout_marginTop="4dp"
                     android:shadowRadius="2"
                     android:shadowColor="#000000"
                     android:shadowDx="1"
                     android:shadowDy="1" />

            </LinearLayout>

        </LinearLayout>



        <!-- Search Section -->
        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_marginTop="20dp"
             android:layout_marginHorizontal="16dp">

            <LinearLayout
                 android:layout_height="50dp"
                 android:layout_width="match_parent"
                 android:gravity="center_vertical"
                 android:background="@drawable/box_create"
                 android:orientation="horizontal"
                 android:paddingHorizontal="16dp"
                 android:elevation="4dp">

                <ImageView
                     android:layout_height="24dp"
                     android:layout_width="24dp"
                     android:src="@android:drawable/ic_menu_search"
                     android:layout_marginEnd="12dp"
                     android:tint="@color/white"
                     android:id="@+id/search_icon" />

                <EditText
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:hint="Search students..."
                     android:textColorHint="@color/white"
                     android:textColor="@color/white"
                     android:fontFamily="@font/paytone_one"
                     android:textSize="16sp"
                     android:background="@android:color/transparent"
                     android:maxLines="1"
                     android:inputType="text"
                     android:imeOptions="actionSearch"
                     android:id="@+id/search_edittext" />

                <ImageView
                     android:layout_height="24dp"
                     android:layout_width="24dp"
                     android:src="@android:drawable/ic_menu_close_clear_cancel"
                     android:layout_marginStart="8dp"
                     android:tint="@color/white"
                     android:visibility="gone"
                     android:id="@+id/clear_search_icon" />

            </LinearLayout>

        </LinearLayout>

        <!-- Students List Container -->
        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginTop="20dp"
             android:layout_marginHorizontal="16dp"
             android:orientation="vertical">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:background="@drawable/bg_board_two"
                 android:padding="8dp"
                 android:orientation="horizontal">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center|top"
                     android:background="@drawable/bg_board_three"
                     android:padding="12dp"
                     android:orientation="vertical">

                    <!-- Header Row with Select All Checkbox -->
                    <LinearLayout
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:orientation="horizontal"
                         android:gravity="center_vertical"
                         android:layout_marginBottom="8dp"
                         android:paddingVertical="8dp">

                        <CheckBox
                             android:layout_height="wrap_content"
                             android:layout_width="wrap_content"
                             android:layout_gravity="start"
                             android:visibility="gone"
                             android:layout_marginEnd="12dp"
                             android:id="@+id/rowCheckboxSelectAll" />

                        <TextView
                             android:layout_height="wrap_content"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:gravity="start|center_vertical"
                             android:fontFamily="@font/paytone_one"
                             android:textSize="16sp"
                             android:textColor="#204520"
                             android:text="Students List"
                             android:textStyle="bold" />

                    </LinearLayout>

                    <!-- RecyclerView for Students -->
                    <androidx.recyclerview.widget.RecyclerView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:id="@+id/studentsRecyclerView"
                         android:nestedScrollingEnabled="false" />

                    <!-- Empty State -->
                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:gravity="center"
                         android:layout_marginVertical="40dp"
                         android:fontFamily="@font/paytone_one"
                         android:textSize="18sp"
                         android:textColor="@color/white"
                         android:shadowColor="#000000"
                         android:shadowDx="2"
                         android:shadowDy="2"
                         android:shadowRadius="4"
                         android:text="No students found"
                         android:visibility="gone"
                         android:id="@+id/emptyStateText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>