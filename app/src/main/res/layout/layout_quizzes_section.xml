<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:fillViewport="true"
     android:id="@+id/scroll">

    <FrameLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:id="@+id/main">

    <FrameLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:id="@+id/number_container">

    </FrameLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="top|center"
         android:orientation="vertical"
         >

        <LinearLayout
             android:layout_height="70dp"
             android:layout_width="match_parent"
             android:gravity="center"
             android:background="@drawable/btn_long_condition"
             android:orientation="vertical"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginTop="20dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_horizontal"
                 android:layout_marginHorizontal="28dp"
                 android:shadowRadius="4"
                 android:textSize="23sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Quizzess" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginBottom="30dp"
             android:layout_marginTop="30dp"
             android:gravity="center"
             android:orientation="vertical">

            <!-- Quiz Level Display -->
            <LinearLayout
                 android:layout_height="120dp"
                 android:layout_width="120dp"
                 android:gravity="center"
                 android:background="@drawable/btn_short_condition"
                 android:orientation="vertical"
                 android:layout_marginBottom="30dp"
                 android:id="@+id/quiz_level_display">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center_horizontal"
                     android:shadowRadius="4"
                     android:textSize="35sp"
                     android:fontFamily="@font/paytone_one"
                     android:textColor="@color/white"
                     android:shadowColor="#000000"
                     android:shadowDx="2"
                     android:shadowDy="2"
                     android:id="@+id/quiz_level_text"
                     android:text="1" />

            </LinearLayout>

            <!-- Grade Level Text -->
            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center_horizontal"
                 android:shadowRadius="4"
                 android:textSize="20sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:layout_marginBottom="30dp"
                 android:id="@+id/grade_level_text"
                 android:text="Grade 1 Quiz" />

            <!-- Start Quiz Button -->
            <androidx.appcompat.widget.AppCompatButton
                 android:layout_height="wrap_content"
                 android:layout_width="200dp"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_playgame"
                 android:fontFamily="@font/paytone_one"
                 android:textSize="24sp"
                 android:textAllCaps="true"
                 android:textColor="@color/white"
                 android:id="@+id/btn_start_quiz"
                 android:text="START QUIZ" />

        </LinearLayout>

    </LinearLayout>

    </FrameLayout>

</ScrollView>