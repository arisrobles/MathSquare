<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/yellowbg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="My Profile"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:shadowRadius="4"
            android:fontFamily="@font/paytone_one"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2" />

        <!-- Profile Info Card -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_board_two"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_board_three"
                android:padding="16dp">

                <!-- Name -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Name:"
                        android:textSize="20sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_student_name"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="18sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Student ID -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Student ID:"
                        android:textSize="20sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_student_id"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="18sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Grade -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Grade:"
                        android:textSize="20sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_student_grade"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="18sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Section -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Section:"
                        android:textSize="20sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_student_section"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="18sp"
                        android:fontFamily="@font/paytone_one"
                        android:textColor="#204520"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Change Password Button -->
        <LinearLayout
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_default"
            android:gravity="left|center"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:id="@+id/btn_change_password">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="62dp"
                android:background="@drawable/btn_ic_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    app:srcCompat="@drawable/baseline_lock_24" />
            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/paytone_one"
                android:textSize="27sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:text="Change Password" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

