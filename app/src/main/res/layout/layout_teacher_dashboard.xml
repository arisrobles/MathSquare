<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@color/yellowbg"
     android:id="@+id/main">

    <ScrollView
         android:id="@+id/scroll"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:fillViewport="true"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="top"
             android:orientation="vertical"
             android:id="@+id/content_layout">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="start|center"
             android:orientation="vertical"
             android:layout_marginTop="60dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:textSize="25sp"
                 android:textColor="@color/white"
                 android:layout_marginTop="30dp"
                 android:gravity="center_horizontal"
                 android:layout_marginHorizontal="28dp"
                 android:shadowRadius="4"
                 android:fontFamily="@font/paytone_one"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Teacher Dashboard" />

        </LinearLayout>


        <LinearLayout
             android:layout_height="200dp"
             android:layout_width="match_parent"
             android:layout_marginEnd="10dp"
             android:gravity="center"
             android:background="@drawable/bg_board_two"
             android:padding="8dp"
             android:orientation="horizontal"
             android:layout_marginTop="30dp"
             android:layout_marginStart="10dp">

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:gravity="center|top"
                 android:background="@drawable/bg_board_three"
                 android:padding="12dp"
                 android:orientation="vertical">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="top|center"
                     android:orientation="horizontal">

                    <TableLayout
                         xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:stretchColumns="0,1">

                        <TableRow
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="23sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#204520"
                                 android:layout_weight="1"
                                 android:layout_gravity="start"
                                 android:text="Grade"
                                 android:textStyle="bold" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="23sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#204520"
                                 android:layout_weight="1"
                                 android:layout_gravity="end"
                                 android:text="Section"
                                 android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                             android:layout_height="wrap_content"
                             android:layout_width="match_parent"
                             android:paddingTop="8dp">

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="18sp"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#5DB575"
                                android:id="@+id/first_grade"
                                 android:layout_weight="1"
                                 android:layout_gravity="start"
                                 android:text="1" />

                            <TextView
                                 android:layout_height="wrap_content"
                                 android:layout_width="0dp"
                                 android:gravity="center"
                                 android:textSize="18sp"
                                android:id="@+id/first_section"
                                 android:fontFamily="@font/paytone_one"
                                 android:textColor="#5DB575"
                                 android:layout_weight="1"
                                 android:layout_gravity="end"
                                 android:text="Nara" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Students Management Section -->
        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_marginTop="30dp"
             android:layout_marginHorizontal="20dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="start"
                 android:shadowRadius="4"
                 android:textSize="22sp"
                 android:fontFamily="@font/paytone_one"
                 android:textColor="@color/white"
                 android:shadowColor="#000000"
                 android:shadowDx="2"
                 android:shadowDy="2"
                 android:text="Student Scores &amp; History"
                 android:textStyle="bold"
                 android:layout_marginBottom="12dp" />

            <RelativeLayout
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/box_create"
                 android:elevation="8dp"
                 android:id="@+id/quizhistory_panel">

                <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:gravity="center"
                     android:orientation="horizontal"
                     android:paddingHorizontal="16dp">

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:gravity="start|center_vertical"
                         android:shadowRadius="4"
                         android:textSize="18sp"
                         android:fontFamily="@font/paytone_one"
                         android:textColor="@color/white"
                         android:shadowColor="#000000"
                         android:shadowDx="2"
                         android:shadowDy="2"
                         android:text="View Students &amp; Scores" />

                    <TextView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center_vertical"
                         android:textSize="24sp"
                         android:fontFamily="@font/paytone_one"
                         android:textColor="@color/white"
                         android:shadowColor="#000000"
                         android:shadowDx="2"
                         android:shadowDy="2"
                         android:text=">" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
             android:layout_height="160dp"
             android:layout_width="match_parent"
             android:gravity="top|center"
             android:orientation="vertical"
             android:layout_marginTop="36dp">

            <LinearLayout
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="26dp"
                 android:background="@drawable/btn_logout"
                 android:gravity="left|center"
                 android:elevation="3dp"
                 android:layout_marginHorizontal="75dp"
                 android:orientation="horizontal"
                 android:id="@+id/btn_logout">

                <LinearLayout
                     android:layout_height="wrap_content"
                     android:layout_width="62dp"
                     android:background="@drawable/btn_ic_logout"
                     android:gravity="center"
                     android:orientation="horizontal">

                    <ImageView
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:padding="12dp"
                         app:srcCompat="@drawable/ic_logout" />

                </LinearLayout>

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:fontFamily="@font/paytone_one"
                     android:textSize="27sp"
                     android:textAllCaps="true"
                     android:textColor="@color/white"
                     android:layout_marginLeft="8dp"
                     android:text="Log Out" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/teacher_menu"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="@color/colorAccent"
        app:itemIconSize="36dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>